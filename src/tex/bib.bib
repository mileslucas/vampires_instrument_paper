@article{marleau_accreting_2022,
	title = {Accreting protoplanets: {Spectral} signatures and magnitude of gas and dust extinction at {H} α},
	volume = {657},
	issn = {0004-6361},
	shorttitle = {Accreting protoplanets},
	url = {https://ui.adsabs.harvard.edu/abs/2022A%26A...657A..38M/abstract},
	doi = {10.1051/0004-6361/202037494},
	abstract = {Context. Accreting planetary-mass objects have been detected at H α, but targeted searches have mainly resulted in non-detections. Accretion tracers in the planetary-mass regime could originate from the shock itself, making them particularly susceptible to extinction by the accreting material. High-resolution (R \&gt; 50 000) spectrographs operating at H α should soon enable one to study how the incoming material shapes the line profile. {\textless}BR /{\textgreater} Aims: We calculate how much the gas and dust accreting onto a planet reduce the H α flux from the shock at the planetary surface and how they affect the line shape. We also study the absorption-modified relationship between the H α luminosity and accretion rate. {\textless}BR /{\textgreater} Methods: We computed the high-resolution radiative transfer of the H α line using a one-dimensional velocity-density-temperature structure for the inflowing matter in three representative accretion geometries: spherical symmetry, polar inflow, and magnetospheric accretion. For each, we explored the wide relevant ranges of the accretion rate and planet mass. We used detailed gas opacities and carefully estimated possible dust opacities. {\textless}BR /{\textgreater} Results: At accretion rates of Ṁ ≲ 3 × 10{\textless}SUP{\textgreater}−6{\textless}/SUP{\textgreater} M{\textless}SUB{\textgreater}J{\textless}/SUB{\textgreater} yr{\textless}SUP{\textgreater}−1{\textless}/SUP{\textgreater}, gas extinction is negligible for spherical or polar inflow and at most A{\textless}SUB{\textgreater}H α{\textless}/SUB{\textgreater} ≲ 0.5 mag for magnetospheric accretion. Up to Ṁ ≈ 3 × 10{\textless}SUP{\textgreater}−4{\textless}/SUP{\textgreater} M{\textless}SUB{\textgreater}J{\textless}/SUB{\textgreater} yr{\textless}SUP{\textgreater}−1{\textless}/SUP{\textgreater}, the gas contributes A{\textless}SUB{\textgreater}H α{\textless}/SUB{\textgreater} ≲ 4 mag. This contribution decreases with mass. We estimate realistic dust opacities at H α to be κ {\textasciitilde} 0.01-10 cm{\textless}SUP{\textgreater}2{\textless}/SUP{\textgreater} g{\textless}SUP{\textgreater}−1{\textless}/SUP{\textgreater}, which is 10-10{\textless}SUP{\textgreater}4{\textless}/SUP{\textgreater} times lower than in the interstellar medium. Extinction flattens the L{\textless}SUB{\textgreater}H α{\textless}/SUB{\textgreater} -Ṁ relationship, which becomes non-monotonic with a maximum luminosity L{\textless}SUB{\textgreater}H α{\textless}/SUB{\textgreater} {\textasciitilde} 10{\textless}SUP{\textgreater}−4{\textless}/SUP{\textgreater} L{\textless}SUB{\textgreater}⊙{\textless}/SUB{\textgreater} towards Ṁ ≈ 10{\textless}SUP{\textgreater}−4{\textless}/SUP{\textgreater} M{\textless}SUB{\textgreater}J{\textless}/SUB{\textgreater} yr{\textless}SUP{\textgreater}−1{\textless}/SUP{\textgreater} for a planet mass {\textasciitilde}10 M{\textless}SUB{\textgreater}J{\textless}/SUB{\textgreater}. In magnetospheric accretion, the gas can introduce features in the line profile, while the velocity gradient smears them out in other geometries. {\textless}BR /{\textgreater} Conclusions: For a wide part of parameter space, extinction by the accreting matter should be negligible, simplifying the interpretation of observations, especially for planets in gaps. At high Ṁ, strong absorption reduces the H α flux, and some measurements can be interpreted as two Ṁ values. Highly resolved line profiles (R {\textasciitilde} 10{\textless}SUP{\textgreater}5{\textless}/SUP{\textgreater}) can provide (complex) constraints on the thermal and dynamical structure of the accretion flow.},
	language = {en},
