}

@article{sallum_accreting_2015,
	title = {Accreting protoplanets in the {LkCa} 15 transition disk},
	volume = {527},
	issn = {0028-0836},
	url = {https://ui.adsabs.harvard.edu/abs/2015Natur.527..342S},
