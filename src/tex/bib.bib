	author = {Willson, Matthew and Kraus, Stefan and Kluska, Jacques and Monnier, John D. and Cure, Michel and Sitko, Mike and Aarnio, Alicia and Ireland, Michael J. and Rizzuto, Aaron and Hone, Edward and Kreplin, Alexander and Andrews, Sean and Calvet, Nuria and Espaillat, Catherine and Fukagawa, Misato and Harries, Tim J. and Hinkley, Sasha and Kanaan, Samer and Muto, Takayuki and Wilner, David J.},
	month = jan,
