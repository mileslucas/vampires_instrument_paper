	month = oct,
	year = {2018},
	pages = {A151},
}

@article{mendigutia_protoplanetary_2017,
	title = {The protoplanetary system {HD} 100546 in {Hα} polarized light from {SPHERE}/{ZIMPOL}. {A} bar-like structure across the disk gap?},
	volume = {608},
	issn = {0004-6361},
	url = {https://ui.adsabs.harvard.edu/abs/2017A&A...608A.104M/abstract},
	doi = {10.1051/0004-6361/201731131},
	abstract = {Context. HD 100546 is one of the few known pre-main-sequence stars that may host a planetary system in its disk. {\textless}BR /{\textgreater} Aims: This work aims to contribute to our understanding of HD 100546 by analyzing new polarimetric images with high spatial resolution. {\textless}BR /{\textgreater} Methods: Using VLT/SPHERE/ZIMPOL with two filters in Hα and the adjacent continuum, we have probed the disk gap and the surface layers of the outer disk, covering a region \&lt;500 mas (\&lt;55 au at 109 pc) from the central star, at an angular resolution of 20 mas. {\textless}BR /{\textgreater} Results: Our data show an asymmetry: the SE and NW regions of the outer disk are more polarized than the SW and NE regions. This asymmetry can be explained from a preferential scattering angle close to 90° and is consistent with previous polarization images. The outer disk in our observations extends from 13 ± 2 to 45 ± 9 au, with a position angle and inclination of 137 ± 5° and 44 ± 8°, respectively. The comparison with previous estimates suggests that the disk inclination could increase with the stellocentric distance, although the different measurements are still consistent within the error bars. In addition, no direct signature of the innermost candidate companion is detected from the polarimetric data, confirming recent results that were based on intensity imagery. We set an upper limit to its mass accretion rate \&lt;10{\textless}SUP{\textgreater}-8{\textless}/SUP{\textgreater} M{\textless}SUB{\textgreater}⊙{\textless}/SUB{\textgreater} yr{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater} for a substellar mass of 15 M{\textless}SUB{\textgreater}Jup{\textless}/SUB{\textgreater}. Finally, we report the first detection (\&gt;3σ) of a 20 au bar-like structure that crosses the gap through the central region of HD 100546. {\textless}BR /{\textgreater} Conclusions: In the absence of additional data, it is tentatively suggested that the bar could be dust dragged by infalling gas that radially flows from the outer disk to the inner region. This could represent an exceptional case in which a small-scale radial inflow is observed in a single system. If this scenario is confirmed, it could explain the presence of atomic gas in the inner disk that would otherwise accrete on to the central star on a timescale of a few months/years, as previously indicated from spectro-interferometric data, and could be related with additional (undetected) planets.},
	language = {en},
	urldate = {2021-09-29},
	journal = {Astronomy and Astrophysics},
	author = {Mendigutía, I. and Oudmaijer, R. D. and Garufi, A. and Lumsden, S. L. and Huélamo, N. and Cheetham, A. and de Wit, W. J. and Norris, B. and Olguin, F. A. and Tuthill, P.},
	month = dec,
	year = {2017},
	pages = {A104},
}

@article{huelamo_searching_2018,
	title = {Searching for {H}{\textless}{SUB}{\textgreater}α{\textless}/{SUB}{\textgreater} emitting sources around {MWC} 758. {SPHERE}/{ZIMPOL} high-contrast imaging},
	volume = {613},
	issn = {0004-6361},
	url = {https://ui.adsabs.harvard.edu/abs/2018A&A...613L...5H/abstract},
	doi = {10.1051/0004-6361/201832874},
	abstract = {Context. MWC 758 is a young star surrounded by a transitional disk. The disk shows an inner cavity and spiral arms that could be caused by the presence of protoplanets. Recently, a protoplanet candidate has been detected around MWC 758 through high-resolution L'-band observations. The candidate is located inside the disk cavity at a separation of 111 mas from the central star, and at an average position angle of 165.5°. {\textless}BR /{\textgreater} Aims: We aim at detecting accreting protoplanet candidates within the disk of MWC 758 through angular spectral differential imaging (ASDI) observations in the optical regime. In particular, we explore the emission at the position of the detected planet candidate. {\textless}BR /{\textgreater} Methods: We have performed simultaneous adaptive optics observations in the H{\textless}SUB{\textgreater}α{\textless}/SUB{\textgreater} line and the adjacent continuum using SPHERE/ZIMPOL at the Very Large Telescope (VLT). {\textless}BR /{\textgreater} Results: The data analysis does not reveal any H{\textless}SUB{\textgreater}α{\textless}/SUB{\textgreater} signal around the target. The derived contrast curve in the B\_Ha filter allows us to derive a 5σ upper limit of 7.6 mag at 111 mas, the separation of the previously detected planet candidate. This contrast translates into a H{\textless}SUB{\textgreater}α{\textless}/SUB{\textgreater} line luminosity of L{\textless}SUB{\textgreater}H{\textless}SUB{\textgreater}α{\textless}/SUB{\textgreater}{\textless}/SUB{\textgreater} ≲ 5×10{\textless}SUP{\textgreater}-5{\textless}/SUP{\textgreater} L{\textless}SUB{\textgreater}⊙{\textless}/SUB{\textgreater} at 111 mas. Assuming that L{\textless}SUB{\textgreater}H{\textless}SUB{\textgreater}α{\textless}/SUB{\textgreater}{\textless}/SUB{\textgreater} scales with L{\textless}SUB{\textgreater}acc{\textless}/SUB{\textgreater} as in classical T Tauri stars (CTTSs) as a first approximation, we can estimate an accretion luminosity of L{\textless}SUB{\textgreater}acc{\textless}/SUB{\textgreater} \&lt; 3.7 × 10{\textless}SUP{\textgreater}-4{\textless}/SUP{\textgreater} L{\textless}SUB{\textgreater}⊙{\textless}/SUB{\textgreater} for the protoplanet candidate. For the predicted mass range of MWC 758b, 0.5-5 M{\textless}SUB{\textgreater}Jup{\textless}/SUB{\textgreater}, this implies accretion rates smaller than Ṁ \&lt; 3.4 × (10{\textless}SUP{\textgreater}-8{\textless}/SUP{\textgreater}-10{\textless}SUP{\textgreater}-9{\textless}/SUP{\textgreater})M{\textless}SUB{\textgreater}⊙{\textless}/SUB{\textgreater} yr{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater}, for an average planet radius of 1.1 R{\textless}SUB{\textgreater}Jup{\textless}/SUB{\textgreater}. Therefore, our estimates are consistent with the predictions of accreting circumplanetary accretion models for R{\textless}SUB{\textgreater}in{\textless}/SUB{\textgreater} = 1R{\textless}SUB{\textgreater}Jup{\textless}/SUB{\textgreater}. The ZIMPOL line luminosity is consistent with the H{\textless}SUB{\textgreater}α{\textless}/SUB{\textgreater} upper limit predicted by these models for truncation radii ≲3.2 R{\textless}SUB{\textgreater}Jup{\textless}/SUB{\textgreater}. {\textless}BR /{\textgreater} Conclusions: The non-detection of any H{\textless}SUB{\textgreater}α{\textless}/SUB{\textgreater} emitting source in the ZIMPOL images does not allow us to unveil the nature of the L' detected source. Either it is a protoplanet candidate or a disk asymmetry. {\textless}P /{\textgreater}The reduced images are only available at the CDS via anonymous ftp to {\textless}A href="http://cdsarc.u-strasbg.fr"{\textgreater}http://cdsarc.u-strasbg.fr{\textless}/A{\textgreater} ({\textless}A href="http://cdsarc.u-strasbg.fr"{\textgreater}http://130.79.128.5{\textless}/A{\textgreater}) or via {\textless}A href="http://cdsarc.u-strasbg.fr/viz-bin/qcat?J/A+A/613/L5"{\textgreater}http://cdsarc.u-strasbg.fr/viz-bin/qcat?J/A+A/613/L5{\textless}/A{\textgreater}Based on observations obtained at Paranal Observatory under program 096.C-0267(A) and 96.C-0248(A).},
	language = {en},
	urldate = {2021-09-29},
	journal = {Astronomy and Astrophysics},
	author = {Huélamo, N. and Chauvin, G. and Schmid, H. M. and Quanz, S. P. and Whelan, E. and Lillo-Box, J. and Barrado, D. and Montesinos, B. and Alcalá, J. M. and Benisty, M. and de Gregorio-Monsalvo, I. and Mendigutía, I. and Bouy, H. and Merín, B. and de Boer, J. and Garufi, A. and Pantin, E.},
