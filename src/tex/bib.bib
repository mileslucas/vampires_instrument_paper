	language = {en},
	urldate = {2021-06-30},
	journal = {Astronomy \& Astrophysics, Volume 579, id.L8, 5 pp.},
	author = {Xu, S. and Ertel, S. and Wahhaj, Z. and Milli, J. and Scicluna, P. and Bertrang, G. H.-M.},
	month = jul,
	year = {2015},
	keywords = {\_tablet},
	pages = {L8},
}

