@inproceedings{jr_is_2004,
	title = {Is that really your {Strehl} ratio?},
	volume = {5490},
	url = {https://www-spiedigitallibrary-org.eres.library.manoa.hawaii.edu/conference-proceedings-of-spie/5490/0000/Is-that-really-your-Strehl-ratio/10.1117/12.549115.short},
