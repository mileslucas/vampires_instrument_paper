@article{avenhaus_disks_2018,
	title = {Disks around {T} {Tauri} {Stars} with {SPHERE} ({DARTTS}-{S}). {I}. {SPHERE}/{IRDIS} {Polarimetric} {Imaging} of {Eight} {Prominent} {T} {Tauri} {Disks}},
