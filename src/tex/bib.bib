	title = {{STIS} {Coronagraphic} {Imaging} of the {Herbig} {AE} {Star}: {HD} 163296},
	volume = {544},
	issn = {0004-637X},
	shorttitle = {{STIS} {Coronagraphic} {Imaging} of the {Herbig} {AE} {Star}},
