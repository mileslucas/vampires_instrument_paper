	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, planet-star interactions, planets and satellites: dynamical evolution and stability, planets and satellites: formation, protoplanetary discs, stars: AGB and post-AGB, white dwarfs},
