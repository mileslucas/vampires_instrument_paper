	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Veras, Dimitri and Tremblay, Pier-Emmanuel and Hermes, J. J. and McDonald, Catriona H. and Kennedy, Grant M. and Meru, Farzana and Gänsicke, Boris T.},
