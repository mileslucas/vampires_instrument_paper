	url = {https://www-spiedigitallibrary-org.eres.library.manoa.hawaii.edu/conference-proceedings-of-spie/7736/77361J/Exoplanet-imaging-with-LOCI-processing--photometry-and-astrometry-with/10.1117/12.857225.short},
