@article{wagner_magellan_2018,
	title = {Magellan {Adaptive} {Optics} {Imaging} of {PDS} 70: {Measuring} the {Mass} {Accretion} {Rate} of a {Young} {Giant} {Planet} within a {Gapped} {Disk}},
