	journal = {The Astrophysical Journal},
	author = {Kluska, Jacques and Kraus, Stefan and Davies, Claire L. and Harries, Tim and Willson, Matthew and Monnier, John D. and Aarnio, Alicia and Baron, Fabien and Millan-Gabet, Rafael and Ten Brummelaar, Theo and Che, Xiao and Hinkley, Sasha and Preibisch, Thomas and Sturmann, Judit and Sturmann, Laszlo and Touhami, Yamina},
