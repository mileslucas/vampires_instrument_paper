	author = {Windhorst, Rogier A. and Franklin, Barbara E. and Neuschaefer, Lyman W.},
	month = jul,
	year = {1994},
	keywords = {Algorithms, Astronomical Photography, Astrophysics, Cameras, Charge Coupled Devices, Cosmic Noise, Cosmic Rays, Data Reduction, Earth Orbits, Error Analysis, Hubble Space Telescope, Instrument Errors, Noise Reduction, Poisson Density Functions, Random Errors, Sensitivity, Signal To Noise Ratios, TECHNIQUES: IMAGE PROCESSING},
