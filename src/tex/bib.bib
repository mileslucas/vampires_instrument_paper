	keywords = {BROWN DWARFS, STARS: BINARIES: CLOSE, STARS: INDIVIDUAL: ALPHANUMERIC: GJ 1245ABC, STARS: INDIVIDUAL: ALPHANUMERIC: GL 105AC, STARS: INDIVIDUAL: NAME: PROCYON, STARS: LOW-MASS},
