	url = {https://www-spiedigitallibrary-org.eres.library.manoa.hawaii.edu/conference-proceedings-of-spie/9912/99122M/Digital-adaptive-coronagraphy-using-SLMs--promising-prospects-of-a/10.1117/12.2232660.full},
