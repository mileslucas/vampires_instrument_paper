@article{schmid_quadrant_2021,
	title = {Quadrant polarization parameters for the scattered light of circumstellar disks - {Analysis} of debris disk models and observations of {HR} {4796A}},
	volume = {655},
	copyright = {© H. M. Schmid 2021},
	issn = {0004-6361, 1432-0746},
	url = {https://www.aanda.org/articles/aa/abs/2021/11/aa40405-21/aa40405-21.html},
	doi = {10.1051/0004-6361/202140405},
	abstract = {{\textless}i{\textgreater}Context.{\textless}i/{\textgreater} Modern imaging polarimetry provides spatially resolved observations for many circumstellar disks and quantitative results for the measured polarization which can be used for comparisons with model calculations and for systematic studies of disk samples.{\textless}i{\textgreater}Aims.{\textless}i/{\textgreater} This paper introduces the quadrant polarization parameters {\textless}i{\textgreater}Q{\textless}i/{\textgreater}{\textless}sub{\textgreater}000{\textless}sub/{\textgreater}, {\textless}i{\textgreater}Q{\textless}i/{\textgreater}{\textless}sub{\textgreater}090{\textless}sub/{\textgreater}, {\textless}i{\textgreater}Q{\textless}i/{\textgreater}{\textless}sub{\textgreater}180{\textless}sub/{\textgreater}, {\textless}i{\textgreater}Q{\textless}i/{\textgreater}{\textless}sub{\textgreater}270{\textless}sub/{\textgreater} for Stokes {\textless}i{\textgreater}Q{\textless}i/{\textgreater} and {\textless}i{\textgreater}U{\textless}i/{\textgreater}{\textless}sub{\textgreater}045{\textless}sub/{\textgreater}, {\textless}i{\textgreater}U{\textless}i/{\textgreater}{\textless}sub{\textgreater}135{\textless}sub/{\textgreater}, {\textless}i{\textgreater}U{\textless}i/{\textgreater}{\textless}sub{\textgreater}225{\textless}sub/{\textgreater}, {\textless}i{\textgreater}U{\textless}i/{\textgreater}{\textless}sub{\textgreater}315{\textless}sub/{\textgreater} for Stokes {\textless}i{\textgreater}U{\textless}i/{\textgreater} for circumstellar disks and describes their use for the polarimetric characterization of the dust in debris disks.{\textless}i{\textgreater}Methods.{\textless}i/{\textgreater} We define the quadrant polarization parameters {\textless}i{\textgreater}Q{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}xxx{\textless}i/{\textgreater}{\textless}sub/{\textgreater} and {\textless}i{\textgreater}U{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}xxx{\textless}i/{\textgreater}{\textless}sub/{\textgreater} and illustrate their properties with measurements of the debris disk around HR 4796A from Milli et al. (2019, A\&A, 626, A54).. We calculate quadrant parameters for simple models of rotationally symmetric and optically thin debris disks and the results provide diagnostic diagrams for the determination of the scattering asymmetry of the dust. This method is tested with data for HR 4796A and compared with detailed scattering phase curve extractions in the literature.{\textless}i{\textgreater}Results.{\textless}i/{\textgreater} The parameters {\textless}i{\textgreater}Q{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}xxx{\textless}i/{\textgreater}{\textless}sub/{\textgreater} and {\textless}i{\textgreater}U{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}xxx{\textless}i/{\textgreater}{\textless}sub/{\textgreater} are ideal for a well-defined and simple characterization of the azimuthal dependence of the polarized light from circumstellar disk because they are based on the “natural” Stokes {\textless}i{\textgreater}Q{\textless}i/{\textgreater} and {\textless}i{\textgreater}U{\textless}i/{\textgreater} quadrant pattern produced by circumstellar scattering. For optically thin and rotationally symmetric debris disks the quadrant parameters normalized to the integrated azimuthal polarization {\textless}i{\textgreater}Q{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}xxx{\textless}i/{\textgreater}{\textless}sub/{\textgreater}∕{\textless}i{\textgreater}Q{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}ϕ{\textless}i/{\textgreater}{\textless}sub/{\textgreater} and {\textless}i{\textgreater}U{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}xxx{\textless}i/{\textgreater}{\textless}sub/{\textgreater}∕{\textless}i{\textgreater}Q{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}ϕ{\textless}i/{\textgreater}{\textless}sub/{\textgreater} or quadrant ratios like {\textless}i{\textgreater}Q{\textless}i/{\textgreater}{\textless}sub{\textgreater}000{\textless}sub/{\textgreater}∕{\textless}i{\textgreater}Q{\textless}i/{\textgreater}{\textless}sub{\textgreater}180{\textless}sub/{\textgreater} depend only on the disk inclination {\textless}i{\textgreater}i{\textless}i/{\textgreater} and the polarized scattering phase function {\textless}i{\textgreater}f{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}ϕ{\textless}i/{\textgreater}{\textless}sub/{\textgreater}({\textless}i{\textgreater}θ{\textless}i/{\textgreater}) of the dust, and they do not depend on the radial distribution of the scattering emissivity. Because the disk inclination {\textless}i{\textgreater}i{\textless}i/{\textgreater} is usually well known for resolved observations, we can derive the shape of {\textless}i{\textgreater}f{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}ϕ{\textless}i/{\textgreater}{\textless}sub/{\textgreater}({\textless}i{\textgreater}θ{\textless}i/{\textgreater}) for the phase angle range {\textless}i{\textgreater}θ{\textless}i/{\textgreater} sampled by the polarization quadrants. This finding also applies to models with vertical extensions as observed for debris disks. Diagnostic diagrams are calculated for all normalized quadrant parameters and several quadrant ratios for the determination of the asymmetry parameter {\textless}i{\textgreater}g{\textless}i/{\textgreater} of the polarized Henyey-Greenstein scattering phase function {\textless}i{\textgreater}f{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}ϕ{\textless}i/{\textgreater}{\textless}sub/{\textgreater}({\textless}i{\textgreater}θ{\textless}i/{\textgreater}, {\textless}i{\textgreater}g{\textless}i/{\textgreater}). We apply these diagrams to the measurement of HR 4796A, and find that a phase function with only one parameter does not reproduce the data well. We find a better solution with a three-parameter phase function {\textless}i{\textgreater}f{\textless}i/{\textgreater}{\textless}sub{\textgreater}{\textless}i{\textgreater}ϕ{\textless}i/{\textgreater}{\textless}sub/{\textgreater}({\textless}i{\textgreater}θ{\textless}i/{\textgreater}, {\textless}i{\textgreater}g{\textless}i/{\textgreater}{\textless}sub{\textgreater}1{\textless}sub/{\textgreater}, {\textless}i{\textgreater}g{\textless}i/{\textgreater}{\textless}sub{\textgreater}2{\textless}sub/{\textgreater}, {\textless}i{\textgreater}w{\textless}i/{\textgreater}), but it is also noted that the well-observed complex disk of HR 4796A cannot be described in full detail with the simple quadrant polarization parameters.{\textless}i{\textgreater}Conclusions.{\textless}i/{\textgreater} The described quadrant polarization parameters are very useful for quantifying the azimuthal dependence of the scattering polarization of spatially resolved circumstellar disks illuminated by the central star. They provide a simple test of the deviations of the disk geometry from axisymmetry and can be used to constrain the scattering phase function for optically thin disks without detailed model fitting of disk images. The parameters are easy to derive from observations and model calculations and are therefore well suited to systematic studies of the dust scattering in circumstellar disks.},
	language = {en},
	urldate = {2023-05-03},
	journal = {Astronomy \& Astrophysics},
	author = {Schmid, H. M.},
	month = nov,
	year = {2021},
	note = {Publisher: EDP Sciences},
	pages = {A83},
}

@article{crotts_multiwavelength_2022,
	title = {A {Multiwavelength} {Study} of the {Highly} {Asymmetrical} {Debris} {Disk} around {HD} 111520},
	volume = {932},
	issn = {0004-637X},
	url = {https://dx.doi.org/10.3847/1538-4357/ac6c86},
	doi = {10.3847/1538-4357/ac6c86},
	abstract = {We observed the nearly edge-on debris disk system HD 111520 at the HJ and K1 near-infrared (NIR) bands using both the spectral and polarization modes of the Gemini Planet Imager. With these new observations, we have performed an empirical analysis in order to better understand the disk morphology and its highly asymmetrical nature. We find that the disk features a large brightness and radial asymmetry, most prominent at shorter wavelengths. We also find that the radial location of the peak polarized intensity differs on either side of the star by 11 au, suggesting that the disk may be eccentric, although, such an eccentricity does not fully explain the large brightness and radial asymmetry observed. Observations of the disk halo with the Hubble Space Telescope also show the disk to be warped at larger separations, with a bifurcation feature in the northwest, further suggesting that there may be a planet in this system creating an asymmetrical disk structure. Measuring the disk color shows that the brighter extension is bluer compared to the dimmer extension, suggesting that the two sides have different dust grain properties. This finding, along with the large brightness asymmetry, are consistent with the hypothesis that a giant impact occurred between two large bodies in the northern extension of the disk, although confirming this based on NIR observations alone is not feasible. Follow-up imaging with the Atacama Large Millimeter/submillimeter Array to resolve the asymmetry in the dust mass distribution is essential in order to confirm this scenario.},
	language = {en},
	number = {1},
	urldate = {2023-05-03},
	journal = {The Astrophysical Journal},
	author = {Crotts, Katie A. and Draper, Zachary H. and Matthews, Brenda C. and Duchêne, Gaspard and Esposito, Thomas M. and Wilner, David and Mazoyer, Johan and Padgett, Deborah and Kalas, Paul and Stapelfeldt, Karl},
	month = jun,
