	author = {Currie, Thayne and Grady, Carol A. and Cloutier, Ryan and Konishi, Mihoko and Stassun, Keivan and Debes, John and van der Marel, Nienke and Muto, Takayuki and Jayawardhana, Ray and Ratzka, Thorsten},
