	journal = {The Astronomical Journal},
	author = {Goebel, Sean and Currie, Thayne and Guyon, Olivier and Brandt, Timothy D. and Groff, Tyler D. and Jovanovic, Nemanja and Kasdin, N. Jeremy and Lozi, Julien and Hodapp, Klaus and Martinache, Frantz and Grady, Carol and Hayashi, Masa and Kwon, Jungmi and McElwain, Michael W. and Yang, Yi and Tamura, Motohide},
	month = dec,
